<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <data>
        <variable
            name="info"
            type="id.boytegar.covidinfo.model.Attributed"/>
    </data>
    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/_5sdp"
        android:elevation="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_10sdp"
       >

        <LinearLayout
            android:padding="@dimen/_5sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/txt_kota"
                    android:text="@{info.countryRegion}"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:textSize="@dimen/_14ssp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:weightSum="1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_weight="0.3"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_width="0dp"
                        app:cardCornerRadius="@dimen/_10sdp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:padding="@dimen/_2sdp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="Positif"
                                android:layout_marginBottom="@dimen/_3sdp"
                                android:textColor="@color/blue"
                                android:textSize="@dimen/_11ssp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="@{info.confirmed.toString()}"
                                android:layout_marginBottom="@dimen/_2sdp"
                                android:textColor="@color/blue"
                                android:textSize="@dimen/_9ssp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_weight="0.3"
                        android:layout_width="0dp"
                        app:cardCornerRadius="@dimen/_10sdp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:padding="@dimen/_2sdp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="Sembuh"
                                android:layout_marginBottom="@dimen/_3sdp"
                                android:textColor="@color/green"
                                android:textSize="@dimen/_11ssp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="@{info.recovered.toString()}"
                                android:layout_marginBottom="@dimen/_2sdp"
                                android:textColor="@color/green"
                                android:textSize="@dimen/_9ssp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_weight="0.3"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_width="0dp"
                        app:cardCornerRadius="@dimen/_10sdp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:padding="@dimen/_2sdp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="Meninggal"
                                android:layout_marginBottom="@dimen/_3sdp"
                                android:textColor="@color/red"
                                android:textSize="@dimen/_11ssp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="@{info.deaths.toString()}"
                                android:layout_marginBottom="@dimen/_2sdp"
                                android:textColor="@color/red"
                                android:textSize="@dimen/_9ssp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
